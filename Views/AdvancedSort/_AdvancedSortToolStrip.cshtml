@* Namespace: Kendo.Component.AdvancedSort.Mvc *@
@using Newtonsoft.Json;
@using Kendo.Component.AdvancedSort.Mvc.Models
@model GridComponentConfigModel
@Html.AdvancedSortSharedResource(new { UseDefaultSortIconStyle = Model.UseDefaultSortIconStyle })
<a style="@(string.IsNullOrEmpty(Model.ButtonOpenSortStyle) ? "margin-left:5px" : Model.ButtonOpenSortStyle)" class="k-button-primary" title="Open Sort Popup" id="@Model.GridName-openpopup"><span class="k-icon k-i-sort-desc"></span></a>
<a style="@(string.IsNullOrEmpty(Model.ButtonClearSortStyle) ? "margin-left:5px" : Model.ButtonClearSortStyle)" class="k-button-primary" title="Clear Sort" id="@Model.GridName-clearsort"><span class="k-icon k-i-sort-clear"></span></a>
@if (!Model.PreventAutoInitialize)
{
    <script type="text/javascript">
        //  - auto initiation of advanced sort component
        //  - scoped for specific grid
        $('#@Model.GridName').AdvancedSortGridExtention().init(@Html.Raw(JsonConvert.SerializeObject(Model.ExcludedColumn)));
    </script>
}
